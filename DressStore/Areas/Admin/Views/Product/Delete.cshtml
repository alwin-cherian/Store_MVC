@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="Title"></label>
            <input asp-for="Title" disabled type="text" class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back To List</a>
            </div>
        </div>
    </div>
</form>

<script src="~/js/vendor.min.js"></script>
<script src="~/js/app.js"></script>
