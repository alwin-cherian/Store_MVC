@model List<Product>

@{
    Layout = "_AdminLayout";
}


<!-- content -->
<div class="content ">
    <div class="container">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">
                    Product List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Create New Product
                </a>
            </div>

        </div>


        <table id="tblData" class="table table-bordered table-striped" width="100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>

        </table>
        
    </div>

</div>
@section Scripts{
    <script src="~/js/product.js"></script>
}

