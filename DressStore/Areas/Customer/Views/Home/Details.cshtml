@model ShoppingCart
<br />
<br />
<br />
<br />
<br />


<form method="post">
    <input hidden asp-for="ProductId" />
    <!-- product-->
    <section class="pt-5">
        <div class="container">
            <div class="row gutter-3 justify-content-between">

                <div class="col-lg-5 pl-md-6 order-2">
                    <div class="sticky-top">

                        <div class="row">
                            <div class="col-12">
                                <span class="item-brand">Neutrale</span>
                                <h1 class="item-title">@Model.Product.Title</h1>
                                <span class="item-price">@Model.Product.Price.ToString("c")</span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <p>@Model.Product.Description</p>
                            </div>
                        </div>

                        <div class="row pl-2 my-3">
                            <div class="col-md-6">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input asp-for="Count" type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-block btn-lg btn-primary"> Add to Cart </button>
                            </div>
                            <div class="col-12 mt-1">
                                <a class="nav-link" href="#">Add to wishlist</a>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-lg-7 order-1">
                    <div class="row gutter-1">
                        <div class="col-12">
                            <figure class="equal zoom">
                                <img class="zoom-img" src="@Model.Product.ImageUrl" alt="Product">
                            </figure>
                        </div>
                        @*<div class="col-6">
                            <figure class="equal zoom">
                                <img class="zoom-img" src="assets/images/demo/product-35-2.jpg" alt="Product">
                            </figure>
                        </div>
                        <div class="col-6">
                            <figure class="equal zoom">
                                <img class="zoom-img" src="assets/images/demo/product-35-3.jpg" alt="Product">
                            </figure>
                        </div>
                        <div class="col-12">
                            <figure class="equal equal-50 zoom">
                                <img class="zoom-img" src="assets/images/demo/product-35-4.jpg" alt="Product">
                            </figure>
                        </div>*@
                    </div>
                </div>

            </div>
        </div>
    </section>

</form>
