@model ShoppingCartVM

<!-- hero -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <h1>Your Cart</h1>
            </div>
        </div>
    </div>
</section>

<form method="post">

    <section class="pt-0">
        <div class="container">
            <div class="row mb-1 d-none d-lg-flex">
                <div class="col-lg-8">
                    <div class="row pr-6">
                        <div class="col-lg-6"><span class="eyebrow">Product</span></div>
                        <div class="col-lg-2 text-center"><span class="eyebrow">Price</span></div>
                        <div class="col-lg-2 text-center"><span class="eyebrow">Quantity</span></div>
                        <div class="col-lg-2 text-center"><span class="eyebrow">Total</span></div>
                    </div>
                </div>
            </div>
            <div class="row gutter-2 gutter-lg-4 justify-content-end">

                <div class="col-lg-8 cart-item-list">
                    @foreach(var item in Model.ShoppingCartList)
                    {
                        <!-- cart item -->
                        <div class="cart-item">
                            <div class="row align-items-center">
                                <div class="col-12 col-lg-6">
                                    <div class="media media-product">
                                        <a href="#!"><img src="@item.Product.ImageUrl" alt="Image"></a>
                                        <div class="media-body">
                                            <h5 class="media-title">@item.Product.Title</h5>
                                            <span class="small">@item.Product.category</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4 col-lg-2 text-center">
                                    <span class="cart-item-price">@item.Price.ToString("c")</span>
                                </div>
                                <div class="col-4 col-lg-2 text-center">
                                    <div class="counter">
                                        <a asp-action="minus" asp-route-cartId="@item.Id"><span class="counter-minus icon-minus" ></span></a>
                                        <input type='text' name='qty-1' class="counter-value" value="@item.Count" min="1" max="10">
                                        <a asp-action="plus" asp-route-cartId="@item.Id"><span class="counter-plus icon-plus" ></span></a>
                                    </div>
                                </div>
                                <div class="col-4 col-lg-2 text-center">
                                    <span class="cart-item-price">@item.EachProductPrice.ToString("c")</span>
                                </div>
                                <a asp-action="remove" asp-route-cartId="@item.Id" class="cart-item-close"><i class="icon-x"></i></a>
                            </div>
                        </div>
                    }

                </div>

                <div class="col-lg-4">
                    <div class="card card-data bg-light">
                        <div class="card-header py-2 px-3">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h3 class="fs-18 mb-0">Order Summary</h3>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-minimal">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Subtotal
                                    <span>@Model.OrderHeader.OrderTotal.ToString("c")</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Shipping
                                    <span>Free</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <input class="form-control" aria-required="true" placeholder="Coupen" />
                                    <a href="" class="eyebrow unedrline action">Check</a>
                                </li>
                            </ul>
                        </div>
                        <div class="card-footer py-2">
                            <ul class="list-group list-group-minimal">
                                <li class="list-group-item d-flex justify-content-between align-items-center text-dark fs-18">
                                    Total
                                    <span>@Model.OrderHeader.OrderTotal.ToString("c")</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <a asp-action="Checkout" class="btn btn-lg btn-primary btn-block mt-1">Checkout</a>
                </div>  

            </div>
        </div>
    </section>
</form>

<script src="~/js/vendor.min.js"></script>
<script src="~/js/app.js"></script>

